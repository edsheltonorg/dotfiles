{
    // -- cross-platform --
    // telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    // security
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",

    // file behavior
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // problems behavior
    "errorLens.excludePatterns": [
        "**/*.{md,org,txt}"
    ],

    // file explorer
    "explorer.confirmDelete": false,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    // terminal behavior
    "terminal.integrated.cwd": "",
    "powershell.integratedConsole.suppressStartupBanner": true,

    // font behavior
    "editor.fontFamily": "JetBrains Mono, DejaVu Sans Mono",
    "editor.fontLigatures": false,
    "editor.fontSize": 16,
    // "editor.fontWeight": 800,
    "terminal.integrated.fontFamily": "JetBrains Mono, DejaVu Sans Mono, monospace",
    // "terminal.integrated.fontWeightBold": "bold",
    "terminal.integrated.fontSize": 14,

    // editor rules
    "editor.suggestSelection": "first",
    "editor.accessibilitySupport": "off",
    "editor.mouseWheelZoom": true,
    "editor.tabCompletion": "off",
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "boundary",
    "editor.cursorSurroundingLines": 11,
    "editor.minimap.maxColumn": 80,
    "editor.rulers": [
        80,
        120
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.bracketPairColorization.enabled": true,
    "window.openFoldersInNewWindow": "on",
    "window.restoreWindows": "preserve",
    "window.titleBarStyle": "native",

    "workbench.editor.untitled.hint": "hidden",
    "workbench.activityBar.visible": false,

    // custom zoom interval plugin
    "customWindowZoom.zoomLevelChangeValue": 0.5,

    // theme
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            "editorHint.border": "#ff426b4d",
            "editorHint.foreground": "#f000",
            "statusBar.background" : "#1A1A1A",
            "statusBar.noFolderBackground" : "#212121",
            "statusBar.debuggingBackground": "#263238",
            "statusBar.foreground" : "#b2c6c7",
        },
    },

    // language settings
    "[plaintext]": {
        "editor.wordWrapColumn": 80,
        "editor.wordBasedSuggestions": false,
    },

    // markdwon
    "[markdown]": {
        "editor.wordWrapColumn": 80,
        "editor.wordBasedSuggestions": false,
    },

    "markdown.preview.scrollPreviewWithEditor": true,
    "markdown.preview.scrollEditorWithPreview": true,

    "pasteImage.defaultName":"[image-]YYYYMMDDHHmmss",
    "pasteImage.insertPattern": "<img src=\"${currentFileName}-media/${imageFileName}\" alt=\"drawing\" width=\"50\" />",
    "pasteImage.path": "${currentFileDir}/${currentFileName}-media",
    "pasteImage.basePath": "${currentFileDir}",
    "pasteImage.forceUnixStyleSeparator": true,

    // org
    "[org]": {
        "editor.wordWrapColumn": 80,
        "editor.wordBasedSuggestions": false,
    },

    // html
    "[html]": {
        "editor.wordWrapColumn": 80,
        "editor.tabSize": 2
    },

    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.useWebExt": true,

    // css
    "[css]": {
        "editor.wordWrapColumn": 80,
        "editor.tabSize": 2
    },

    // javascript
    "[javascript]": {
        "editor.wordWrapColumn": 80,
        "editor.tabSize": 2
    },

    // php
    "php.validate.run": "onType",


    // emmet
    "emmet.syntaxProfiles": {
        "html": {
            "self_closing_tag" : true
        }
    },

    // powershell
    "[powershell]": {
        "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
        "editor.semanticHighlighting.enabled": false,
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },

    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
    "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
    "powershell.codeFormatting.useCorrectCasing": true,

    // latex
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",

    // java
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",


    // -- Windows --
    // Terminal
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "powershell.scriptAnalysis.settingsPath": "C:\\Users\\stacy\\dotfiles\\VSCodium\\User\\PSScriptAnalyzerSettings.psd1",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-nologo"]
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        }
    },

    // java
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-11",
            "path": "C:\\Program Files\\AdoptOpenJDK\\jdk-11.0.11.9-hotspot",
            "default": true
        }
    ],

    // php
    "php.validate.executablePath": "C:\\bin-programs\\php\\php8.0.8\\php.exe",

    // -- cross-platform extras --
    // vscodevim
    "vim.useSystemClipboard": true,
    "vim.foldfix": true,
    "vim.whichwrap": "h,l,<,>,[,]",
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-s>": false,
        "<C-S>": false,
        "<C-w>": false,
        "<C-f>": false,
        "<C-t>": false,
        "<C-n>": false,
        "<C-u>": false,
        "<C-i>": false,
        "<Enter>": false
    },
    "vim.normalModeKeyBindings": [
        {
            "before": ["J"],
            "after": ["j", "j", "j", "j", "j", "j", "j", "j", "j", "j", "j", "j", "j", "j"]
        },
        {
            "before": ["K"],
            "after": ["k", "k", "k", "k", "k", "k", "k", "k", "k", "k", "k", "k", "k", "k"]
        },
        {
            "before": ["<Space>"],
            "commands": ["editor.toggleFold"],
        },
        {
            "before": ["g", "u"],
            "commands": ["workbench.action.previousEditor"],
        },
        {
            "before": ["g", "i"],
            "commands": ["workbench.action.nextEditor"],
        },
        {
            "before": ["g", "h"],
            "commands": ["workbench.action.navigateLeft"],
        },
        {
            "before": ["g", "l"],
            "commands": ["workbench.action.navigateRight"],
        },
        {
            "before": ["g", "j"],
            "commands": ["workbench.action.navigateDown"],
        },
        {
            "before": ["g", "k"],
            "commands": ["workbench.action.navigateUp"],
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],

    // spell checker
    "cSpell.enabled": true,
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.spellCheckDelayMs": 500,
    "cSpell.showStatus": true,
    "cSpell.allowCompoundWords": false,
    "cSpell.language": "en",
    "cSpell.maxNumberOfProblems": 100,
    "cSpell.numSuggestions": 8,
    "cSpell.minWordLength": 4,
